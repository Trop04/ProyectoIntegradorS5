<UserControl x:Class="ProyectoIntegradorS5.Views.VentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Color x:Key="PrimaryLightColor">#F8F8F8</Color>
        <Color x:Key="PrimaryLightEndColor">#FFFFFF</Color>
        <Color x:Key="SecondaryLightColor">#FFFFFF</Color>
        <Color x:Key="SecondaryLightEndColor">#F0F0F0</Color>
        <Color x:Key="AccentColor">#007ACC</Color>
        <Color x:Key="AccentEndColor">#3399FF</Color>
        <Color x:Key="FocusColor">#005691</Color>
        <Color x:Key="FocusEndColor">#007ACC</Color>
        <Color x:Key="PrimaryTextColor">#333333</Color>
        <Color x:Key="SecondaryTextColor">#666666</Color>
        <Color x:Key="BorderColor">#CCCCCC</Color>
        <Color x:Key="HeaderBackgroundColor">#E0E0E0</Color>
        <Color x:Key="HeaderBackgroundEndColor">#F5F5F5</Color>
        <Color x:Key="DataGridRowAlternatingColor">#F0F0F0</Color>
        <Color x:Key="DataGridRowAlternatingEndColor">#FAFAFA</Color>
        <Color x:Key="DataGridSelectionColor">#E6F2F7</Color>
        <LinearGradientBrush x:Key="PrimaryLightBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource PrimaryLightColor}" Offset="0"/>
            <GradientStop Color="{StaticResource PrimaryLightEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SecondaryLightBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource SecondaryLightColor}" Offset="0"/>
            <GradientStop Color="{StaticResource SecondaryLightEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="AccentBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource AccentColor}" Offset="0"/>
            <GradientStop Color="{StaticResource AccentEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="FocusBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource FocusColor}" Offset="0"/>
            <GradientStop Color="{StaticResource FocusEndColor}" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="DataGridSelectionSolidBrush" Color="{StaticResource DataGridSelectionColor}"/>

        <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource HeaderBackgroundColor}" Offset="0"/>
            <GradientStop Color="{StaticResource HeaderBackgroundEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DataGridRowAlternatingGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource DataGridRowAlternatingColor}" Offset="0"/>
            <GradientStop Color="{StaticResource DataGridRowAlternatingEndColor}" Offset="1"/>
        </LinearGradientBrush>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource SecondaryLightBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource FocusBrush}"/>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource FocusBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource FocusBrush}"/>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="true" SnapsToDevicePixels="true" KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="ColumnDefinition0"/>
                                <ColumnDefinition x:Name="ColumnDefinition1" Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="RowDefinition0" Height="Auto"/>
                                <RowDefinition x:Name="RowDefinition1" Height="*"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="Border" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="{StaticResource PrimaryLightBrush}">
                                <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                            </Border>
                            <TabPanel x:Name="HeaderPanel" Grid.Row="0" Grid.Column="0" IsItemsHost="true"
                              Margin="2,2,2,0" Background="Transparent"
                              KeyboardNavigation.TabIndex="1"
                              ZIndex="1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                            <Border x:Name="mainBorder"
                            BorderThickness="0" CornerRadius="8,8,0,0"
                            Margin="2,0,2,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="{StaticResource SecondaryLightColor}" Offset="0"/>
                                        <GradientStop Color="{StaticResource SecondaryLightEndColor}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter x:Name="contentPresenter" ContentSource="Header"
                                          Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}" RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="1,1,1,0"/>
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
            <Setter Property="RowBackground" Value="{StaticResource SecondaryLightBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DataGridRowAlternatingGradientBrush}"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource HeaderBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{StaticResource SecondaryLightBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Setter Property="Height" Value="Auto"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DataGridSelectionSolidBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource DataGridSelectionSolidBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <TabControl>
        <!-- TAB CATÁLOGO -->
        <TabItem Header="Catálogo">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Catálogo de Productos" 
                          FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Lista de Productos -->
                <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" 
                       Margin="0,0,10,0">
                    <ScrollViewer>
                        <DataGrid x:Name="ProductosDataGrid" AutoGenerateColumns="False" 
                                 CanUserAddRows="False" GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="200"/>
                                <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C}" Width="80"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="60"/>
                                <DataGridTemplateColumn Header="Imagen" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding RutaImagen}" Width="60" Height="Auto" 
                                                  Stretch="UniformToFill" Margin="2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Acciones" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="✏️" Width="25" Height="25" Margin="2" 
                                                       Click="EditarProducto_Click" Tag="{Binding}"/>
                                                <Button Content="🗑️" Width="25" Height="25" Margin="2" 
                                                       Click="EliminarProducto_Click" Tag="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Border>

                <!-- Panel de Gestión de Productos -->
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Gestión de Productos" FontSize="14" FontWeight="Bold" 
                                  Margin="0,0,0,10"/>

                        <!-- Campos del Producto -->
                        <TextBlock Text="Nombre:" FontWeight="Bold"/>
                        <TextBox x:Name="NombreTextBox" Margin="0,2,0,5"/>

                        <TextBlock Text="Descripción:" FontWeight="Bold"/>
                        <TextBox x:Name="DescripcionTextBox" Margin="0,2,0,5" Height="60" 
                                TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                        <TextBlock Text="Precio:" FontWeight="Bold"/>
                        <TextBox x:Name="PrecioTextBox" Margin="0,2,0,5"/>

                        <TextBlock Text="Stock:" FontWeight="Bold"/>
                        <TextBox x:Name="StockTextBox" Margin="0,2,0,5"/>

                        <TextBlock Text="Imagen:" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,5">
                            <TextBox x:Name="RutaImagenTextBox" Width="120" IsReadOnly="True"/>
                            <Button x:Name="SeleccionarImagenButton" Content="📁" Width="30" Height="25" 
                                   Margin="5,0,0,0" Click="SeleccionarImagen_Click"/>
                        </StackPanel>

                        <!-- Vista previa de imagen -->
                        <Border BorderBrush="Gray" BorderThickness="1" Width="120" Height="80" Margin="0,5">
                            <Image x:Name="ImagenPreview" Stretch="UniformToFill"/>
                        </Border>

                        <!-- Botones de acción -->
                        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                            <Button x:Name="GuardarProductoButton" Content="💾 Guardar Producto" 
                                   Height="35" Margin="0,2" Click="GuardarProducto_Click"
                                   Background="DarkGreen"/>
                            <Button x:Name="NuevoProductoButton" Content="➕ Nuevo Producto" 
                                   Height="35" Margin="0,2" Click="NuevoProducto_Click"
                                   Background="DarkBlue"/>
                            <Button x:Name="CancelarButton" Content="❌ Cancelar" 
                                   Height="35" Margin="0,2" Click="Cancelar_Click"
                                   Background="Crimson"/>
                        </StackPanel>

                        <!-- Búsqueda -->
                        <Separator Margin="0,10"/>
                        <TextBlock Text="Buscar:" FontWeight="Bold"/>
                        <TextBox x:Name="BuscarTextBox" Margin="0,2,0,5" 
                                TextChanged="BuscarTextBox_TextChanged"/>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>

        <!-- TAB FACTURACIÓN -->
        <TabItem Header="Facturación">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0" Text="Facturación de Ventas" FontSize="20" 
                          FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Información del Cliente -->
                <GroupBox Grid.Row="1" Header="Información del Cliente" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Cliente:" 
                                  VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="ClienteComboBox" Grid.Column="0" 
                                     DisplayMemberPath="NombreCompleto" SelectedValuePath="Id"
                                     IsEditable="True" TextSearch.TextPath="NombreCompleto"
                                     SelectionChanged="ClienteComboBox_SelectionChanged"/>
                            <Button x:Name="BuscarClienteButton" Grid.Column="1" Content="🔍" 
                                   Width="30" Height="25" Margin="5,0,0,0" 
                                   Click="BuscarCliente_Click" ToolTip="Buscar cliente"/>
                        </Grid>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Fecha:" 
                                  VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                        <DatePicker x:Name="FechaDatePicker" Grid.Row="0" Grid.Column="3"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Dirección:" 
                                  VerticalAlignment="Center" Margin="0,5,10,0" FontWeight="Bold"/>
                        <TextBox x:Name="DireccionTextBox" Grid.Row="1" Grid.Column="1" 
                                Grid.ColumnSpan="3" Margin="0,5,0,0" IsReadOnly="True"/>
                    </Grid>
                </GroupBox>

                <!-- Contenido Principal de Facturación -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Lista de Productos en la Factura -->
                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" 
                           Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Productos en la Factura" 
                                      FontWeight="Bold" Margin="10" FontSize="14"/>

                            <DataGrid Grid.Row="1" x:Name="FacturaDataGrid" Margin="10" 
                                     AutoGenerateColumns="False" CanUserAddRows="False"
                                     GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="150"/>
                                    <DataGridTextColumn Header="Precio Unit." 
                                                       Binding="{Binding PrecioUnitario, StringFormat=C}" Width="80"/>
                                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="70"/>
                                    <DataGridTextColumn Header="Subtotal" 
                                                       Binding="{Binding Subtotal, StringFormat=C}" Width="80"/>
                                    <DataGridTemplateColumn Header="Acción" Width="60">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="🗑️" Width="25" Height="25" 
                                                       Click="EliminarDeFactura_Click" Tag="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Panel de Agregar Productos -->
                    <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Agregar Productos" FontSize="14" FontWeight="Bold" 
                                      Margin="0,0,0,10"/>

                            <!-- Selector de Producto -->
                            <TextBlock Text="Producto:" FontWeight="Bold"/>
                            <ComboBox x:Name="ProductoComboBox" Margin="0,2,0,10"
                                     DisplayMemberPath="Nombre" SelectedValuePath="Id"/>

                            <!-- Cantidad -->
                            <TextBlock Text="Cantidad:" FontWeight="Bold"/>
                            <TextBox x:Name="CantidadTextBox" Margin="0,2,0,10" Text="1"/>

                            <!-- Botón Agregar -->
                            <Button x:Name="AgregarProductoButton" Content="➕ Agregar a Factura" 
                                   Height="35" Margin="0,5" Click="AgregarAFactura_Click"
                                   Background="DarkGreen"/>

                            <Separator Margin="0,10"/>

                            <!-- Resumen de la Factura -->
                            <TextBlock Text="Resumen de Factura" FontSize="14" FontWeight="Bold" 
                                      Margin="0,0,0,10"/>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Subtotal: " FontWeight="Bold" Width="70"/>
                                    <TextBlock x:Name="SubtotalLabel" Text="$0.00"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="IVA (15%): " FontWeight="Bold" Width="70"/>
                                    <TextBlock x:Name="IVALabel" Text="$0.00"/>
                                </StackPanel>
                                <Separator Margin="0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="TOTAL: " FontWeight="Bold" Width="70" FontSize="16"/>
                                    <TextBlock x:Name="TotalLabel" Text="$0.00" FontSize="16" FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>

                            <Separator Margin="0,10"/>

                            <!-- Botones de Factura -->
                            <StackPanel>
                                <Button x:Name="NuevaFacturaButton" Content="📄 Nueva Factura" 
                                       Height="35" Margin="0,2" Click="NuevaFactura_Click"
                                       Background="DarkBlue"/>
                                <Button x:Name="GuardarFacturaButton" Content="💾 Guardar Factura" 
                                       Height="35" Margin="0,2" Click="GuardarFactura_Click"
                                       Background="DarkGreen"/>
                                <Button x:Name="ImprimirFacturaButton" Content="🖨️ Imprimir Factura" 
                                       Height="35" Margin="0,2" Click="ImprimirFactura_Click"
                                       Background="YellowGreen"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Número de Factura -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Número de Factura: " FontWeight="Bold"/>
                    <TextBlock x:Name="NumeroFacturaLabel" Text="FACT-001" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
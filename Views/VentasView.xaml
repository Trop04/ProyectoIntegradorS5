<UserControl x:Class="ProyectoIntegradorS5.Views.VentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <TabControl>
        <TabItem Header="Catálogo">
            <StackPanel Margin="10">
                <TextBlock Text="Catálogo de Productos" FontSize="16" FontWeight="Bold" />
                <!-- Aquí se pueden mostrar los productos -->
            </StackPanel>
        </TabItem>
        <TabItem Header="Facturación">
            <StackPanel Margin="10">
                <TextBlock Text="Facturación de Ventas" FontSize="16" FontWeight="Bold" />
                <!-- Aquí se pueden gestionar facturas -->
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>

<UserControl x:Class="ProyectoIntegradorS5.Views.UsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProyectoIntegradorS5.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Grid Margin="10">
        <TabControl>
            <!-- CLIENTES -->
            <TabItem Header="Clientes">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Barra de herramientas -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Gestión de Clientes" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                        <Button Content="Añadir Cliente" Click="OnAñadirCliente" Margin="20,0" />
                        <TextBox x:Name="txtFiltroCliente" Width="200" Margin="10,0"  />
                        <Button Content="Buscar" Click="OnBuscarCliente" />
                        <Button Content="Exportar CSV" Margin="10,0" />
                    </StackPanel>

                    <!-- Lista de Clientes -->
                    <DataGrid x:Name="dgClientes" Grid.Row="1" AutoGenerateColumns="False" Height="400" Margin="0,0,0,10" CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="*"/>
                            <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="*"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="*"/>
                            <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}" Width="*"/>
                            <DataGridTextColumn Header="Ciudad" Binding="{Binding Ciudad}" Width="*"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="*"/>
                            <DataGridTextColumn Header="Creación" Binding="{Binding FechaCreacion, StringFormat={}{0:yyyy-MM-dd}}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Botones de acción -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Editar" Click="OnEditarCliente" />
                        <Button Content="Eliminar" Click="OnEliminarCliente" Margin="10,0" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- EMPLEADOS -->
            <TabItem Header="Empleados">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Barra de herramientas -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Gestión de Empleados" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                        <Button Content="Añadir Empleado" Click="OnAñadirEmpleado" Margin="20,0" />
                        <TextBox x:Name="txtFiltroEmpleado" Width="200" Margin="10,0"  />
                        <Button Content="Buscar" Click="OnBuscarEmpleado" />
                        <Button Content="Exportar CSV" Margin="10,0" />
                    </StackPanel>

                    <!-- Lista de Empleados -->
                    <DataGrid x:Name="dgEmpleados" Grid.Row="1" AutoGenerateColumns="False" Height="400" Margin="0,0,0,10" CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="*"/>
                            <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="*"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="*"/>
                            <DataGridTextColumn Header="Cargo" Binding="{Binding Cargo}" Width="*"/>
                            <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento}" Width="*"/>
                            <DataGridTextColumn Header="Salario" Binding="{Binding Salario, StringFormat=C}" Width="*"/>
                            <DataGridTextColumn Header="Horario" Binding="{Binding Horario}" Width="*"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Botones de acción -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Editar" Click="OnEditarEmpleado" />
                        <Button Content="Eliminar" Click="OnEliminarEmpleado" Margin="10,0" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>

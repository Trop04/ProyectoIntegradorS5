<UserControl x:Class="ProyectoIntegradorS5.Views.TabProduccion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoIntegradorS5.Views"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="889.037">

    <UserControl.Resources>
        <Color x:Key="PrimaryLightColor">#F8F8F8</Color>
        <Color x:Key="PrimaryLightEndColor">#FFFFFF</Color>
        <Color x:Key="SecondaryLightColor">#FFFFFF</Color>
        <Color x:Key="SecondaryLightEndColor">#F0F0F0</Color>
        <Color x:Key="AccentColor">#007ACC</Color>
        <Color x:Key="AccentEndColor">#3399FF</Color>
        <Color x:Key="FocusColor">#005691</Color>
        <Color x:Key="FocusEndColor">#007ACC</Color>
        <Color x:Key="PrimaryTextColor">#333333</Color>
        <Color x:Key="SecondaryTextColor">#666666</Color>
        <Color x:Key="BorderColor">#CCCCCC</Color>
        <Color x:Key="HeaderBackgroundColor">#E0E0E0</Color>
        <Color x:Key="HeaderBackgroundEndColor">#F5F5F5</Color>
        <Color x:Key="DataGridRowAlternatingColor">#F0F0F0</Color>
        <Color x:Key="DataGridRowAlternatingEndColor">#FAFAFA</Color>
        <Color x:Key="DataGridSelectionColor">#E6F2F7</Color>
        <LinearGradientBrush x:Key="PrimaryLightBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource PrimaryLightColor}" Offset="0"/>
            <GradientStop Color="{StaticResource PrimaryLightEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SecondaryLightBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource SecondaryLightColor}" Offset="0"/>
            <GradientStop Color="{StaticResource SecondaryLightEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="AccentBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource AccentColor}" Offset="0"/>
            <GradientStop Color="{StaticResource AccentEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="FocusBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource FocusColor}" Offset="0"/>
            <GradientStop Color="{StaticResource FocusEndColor}" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="DataGridSelectionSolidBrush" Color="{StaticResource DataGridSelectionColor}"/>

        <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource HeaderBackgroundColor}" Offset="0"/>
            <GradientStop Color="{StaticResource HeaderBackgroundEndColor}" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DataGridRowAlternatingGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource DataGridRowAlternatingColor}" Offset="0"/>
            <GradientStop Color="{StaticResource DataGridRowAlternatingEndColor}" Offset="1"/>
        </LinearGradientBrush>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource SecondaryLightBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource FocusBrush}"/>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                            CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource FocusBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource FocusBrush}"/>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="true" SnapsToDevicePixels="true" KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="ColumnDefinition0"/>
                                <ColumnDefinition x:Name="ColumnDefinition1" Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="RowDefinition0" Height="Auto"/>
                                <RowDefinition x:Name="RowDefinition1" Height="*"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="Border" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Background="{StaticResource PrimaryLightBrush}">
                                <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                            </Border>
                            <TabPanel x:Name="HeaderPanel" Grid.Row="0" Grid.Column="0" IsItemsHost="true"
                                  Margin="2,2,2,0" Background="Transparent"
                                  KeyboardNavigation.TabIndex="1"
                                  ZIndex="1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                            <Border x:Name="mainBorder"
                                BorderThickness="0" CornerRadius="8,8,0,0"
                                Margin="2,0,2,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="{StaticResource SecondaryLightColor}" Offset="0"/>
                                        <GradientStop Color="{StaticResource SecondaryLightEndColor}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter x:Name="contentPresenter" ContentSource="Header"
                                              Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}" RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="1,1,1,0"/>
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
            <Setter Property="RowBackground" Value="{StaticResource SecondaryLightBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DataGridRowAlternatingGradientBrush}"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource HeaderBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{StaticResource SecondaryLightBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Setter Property="Height" Value="35"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DataGridSelectionSolidBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource DataGridSelectionSolidBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="Optimizador" x:Name="LinearProgrammingTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Encabezado -->
                        <Border Grid.Row="0" Background="#2E3440" CornerRadius="5" Margin="0,0,0,10">
                            <StackPanel Orientation="Vertical" Margin="15,10">
                                <TextBlock Text="Optimización de Producción" 
                              Foreground="White" FontSize="18" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Name="btnNuevo" Content="📄 Nuevo" Margin="5,0" Padding="10,5" 
                               Background="#007ACC" Foreground="White" BorderThickness="0" 
                               ToolTip="Crear nuevo modelo"/>
                                    <Button x:Name="btnAbrir" Content="📁 Abrir" Padding="10,5" 
                               Background="#007ACC" Foreground="White" BorderThickness="0"
                               ToolTip="Abrir modelo existente" Width="63"/>
                                    <Button Name="btnGuardar" Content="💾 Guardar" Margin="5,0" Padding="10,5" 
                               Background="#007ACC" Foreground="White" BorderThickness="0"
                               ToolTip="Guardar modelo actual" Width="82"/>
                                    <Button Name="btnExportar" Content="📊 Exportar" Margin="5,0" Padding="10,5" 
                               Background="#007ACC" Foreground="White" BorderThickness="0"
                               ToolTip="Exportar resultados"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Panel de configuración y resolución -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <GroupBox Header="Objetivo" Margin="5,0" Padding="10">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Name="rbMaximizar" Content="Maximizar Beneficio" 
                                   IsChecked="True" Margin="0,0,20,0"/>
                                    <RadioButton Name="rbMinimizar" Content="Minimizar Costo"/>
                                </StackPanel>
                            </GroupBox>
                            <Button Name="btnResolver" Content="🚀 RESOLVER MODELO" 
                       Background="#007ACC" Foreground="White" FontWeight="Bold"
                       Padding="20,10" Margin="20,0" FontSize="14"
                       ToolTip="Ejecutar optimización" Width="168"/>
                        </StackPanel>

                        <!-- Contenido principal -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Sección de Productos (Variables) -->
                            <GroupBox Grid.Column="0" Header="🏭 Variables de Decisión (Productos)" 
                         Margin="0,0,5,0" Padding="10">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Button Name="btnAgregarProducto" Content="➕ Agregar Producto" 
                                   Background="#007ACC" Foreground="White" Padding="10,5" Margin="5,0" Width="151"/>
                                        <Button Name="btnEliminarProducto" Content="➖ Eliminar Seleccionado" 
                                   Background="#BF616A" Foreground="White" Padding="10,5" Margin="5,0" Width="171"/>
                                    </StackPanel>

                                    <DataGrid Name="dgProductos" AutoGenerateColumns="False" 
                                 CanUserAddRows="True" CanUserDeleteRows="True"
                                 GridLinesVisibility="Horizontal" AlternatingRowBackground="#F8F9FA">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="Auto"/>
                                            <DataGridTextColumn Header="Beneficio/Costo" Binding="{Binding Beneficio}" Width="Auto"/>
                                            <DataGridTextColumn Header="Recurso 1" Binding="{Binding Recurso1}" Width="Auto"/>
                                            <DataGridTextColumn Header="Recurso 2" Binding="{Binding Recurso2}" Width="Auto"/>
                                            <DataGridTextColumn Header="Recurso 3" Binding="{Binding Recurso3}" Width="Auto"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </GroupBox>

                            <!-- Sección de Recursos (Restricciones) -->
                            <GroupBox Grid.Column="1" Header="📦 Restricciones (Recursos Disponibles)" 
                         Margin="5,0,0,0" Padding="10">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Button Name="btnAgregarRecurso" Content="➕ Agregar Recurso" 
                                   Background="#007ACC" Foreground="White" Padding="10,5" Margin="5,0" Width="142"/>
                                        <Button Name="btnEliminarRecurso" Content="➖ Eliminar Seleccionado" 
                                   Background="#BF616A" Foreground="White" Padding="10,5" Margin="5,0" Width="173"/>
                                    </StackPanel>

                                    <DataGrid Name="dgRecursos" AutoGenerateColumns="False" 
                                 CanUserAddRows="True" CanUserDeleteRows="True"
                                 GridLinesVisibility="Horizontal" AlternatingRowBackground="#F8F9FA">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Recurso" Binding="{Binding Nombre}" Width="Auto"/>
                                            <DataGridTextColumn Header="Disponible" Binding="{Binding Disponible}" Width="Auto"/>
                                            <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="Auto"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </GroupBox>
                        </Grid>

                        <!-- Separador -->
                        <Separator Grid.Row="3" Margin="0,10"/>

                        <!-- Panel de Resultados -->
                        <TabControl Grid.Row="4" Margin="0,10,0,0">
                            <!-- Pestaña de Resultados -->
                            <TabItem Header="📈 Resultados de Optimización">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Resumen de resultados -->
                                    <Border Grid.Row="0" Background="#ECEFF4" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Valor Óptimo:" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Name="txtValorOptimo" Text="$0.00" FontSize="20" 
                                              Foreground="#A3BE8C" FontWeight="Bold"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Estado:" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Name="txtEstado" Text="Sin resolver" FontSize="16" 
                                              Foreground="#D08770"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Tiempo de cálculo:" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Name="txtTiempo" Text="0 ms" FontSize="16"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Tablas de resultados -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <GroupBox Grid.Column="0" Header="Producción Óptima" Margin="0,0,5,0">
                                            <DataGrid Name="dgResultadosProductos" AutoGenerateColumns="False" IsReadOnly="True"
                                         GridLinesVisibility="Horizontal" AlternatingRowBackground="#F8F9FA" ColumnWidth="SizeToHeader">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="Auto"/>
                                                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="Auto"/>
                                                    <DataGridTextColumn Header="Beneficio Total" Binding="{Binding BeneficioTotal}" Width="Auto"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </GroupBox>

                                        <GroupBox Grid.Column="1" Header="Uso de Recursos" Margin="5,0,0,0">
                                            <DataGrid Name="dgResultadosRecursos" AutoGenerateColumns="False" IsReadOnly="True"
                                         GridLinesVisibility="Horizontal" AlternatingRowBackground="#F8F9FA">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Recurso" Binding="{Binding Recurso}" Width="Auto"/>
                                                    <DataGridTextColumn Header="Usado" Binding="{Binding Usado}" Width="Auto"/>
                                                    <DataGridTextColumn Header="Disponible" Binding="{Binding Disponible}" Width="Auto"/>
                                                    <DataGridTextColumn Header="Sobrante" Binding="{Binding Sobrante}" Width="Auto"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </GroupBox>
                                    </Grid>
                                </Grid>
                            </TabItem>

                            <!-- Pestaña de Gráficos -->
                            <TabItem Header="📊 Análisis Visual">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <GroupBox Grid.Column="0" Header="Uso de Recursos" Margin="0,0,5,0">
                                        <Canvas Name="canvasGraficoRecursos" Background="White">
                                            <TextBlock Canvas.Left="10" Canvas.Top="10" 
                                          Text="Gráfico de barras - Uso vs Disponible"
                                          FontStyle="Italic" Foreground="Gray"/>
                                        </Canvas>
                                    </GroupBox>

                                    <GroupBox Grid.Column="1" Header="Región Factible (2 Variables)" Margin="5,0,0,0">
                                        <Canvas Name="canvasRegionFactible" Background="White">
                                            <TextBlock Canvas.Left="10" Canvas.Top="10" 
                                          Text="Representación gráfica del área factible"
                                          FontStyle="Italic" Foreground="Gray"/>
                                        </Canvas>
                                    </GroupBox>
                                </Grid>
                            </TabItem>

                            <!-- Pestaña de Historial -->
                            <TabItem Header="📋 Historial y Análisis">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                        <Button Name="btnAnalisisSensibilidad" Content="🔍 Análisis de Sensibilidad" 
                                   Background="#D08770" Foreground="White" Padding="10,5" Margin="0,0,10,0"/>
                                        <Button Name="btnSimularCambios" Content="⚡ Simular Cambios" 
                                   Background="#EBCB8B" Foreground="Black" Padding="10,5" Margin="0,0,10,0"/>
                                        <Button Name="btnLimpiarHistorial" Content="🗑️ Limpiar Historial" 
                                   Background="#BF616A" Foreground="White" Padding="10,5"/>
                                    </StackPanel>

                                    <DataGrid Grid.Row="1" Name="dgHistorial" AutoGenerateColumns="False" IsReadOnly="True"
                                 GridLinesVisibility="Horizontal" AlternatingRowBackground="#F8F9FA">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Fecha/Hora" Binding="{Binding Fecha}" Width="Auto"/>
                                            <DataGridTextColumn Header="Productos" Binding="{Binding NumProductos}" Width="Auto"/>
                                            <DataGridTextColumn Header="Recursos" Binding="{Binding NumRecursos}" Width="Auto"/>
                                            <DataGridTextColumn Header="Valor Óptimo" Binding="{Binding ValorOptimo}" Width="Auto"/>
                                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="Auto"/>
                                            <DataGridTextColumn Header="Tiempo (ms)" Binding="{Binding Tiempo}" Width="Auto"/>
                                            <DataGridTextColumn Header="Notas" Binding="{Binding Notas}" Width="Auto"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>

                            <!-- Pestaña de Configuración -->
                            <TabItem Header="⚙️ Configuración Avanzada">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="10">
                                        <GroupBox Header="Parámetros del Solver" Margin="0,0,0,10">
                                            <Grid Margin="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tolerancia:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                                                <TextBox Grid.Row="0" Grid.Column="1" Name="txtTolerancia" Text="1e-6" Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Iteraciones máximas:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                                                <TextBox Grid.Row="1" Grid.Column="1" Name="txtMaxIteraciones" Text="1000" Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Método de solución:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <ComboBox Grid.Row="2" Grid.Column="1" Name="cmbMetodo">
                                                    <ComboBoxItem Content="Simplex" IsSelected="True"/>
                                                    <ComboBoxItem Content="Dual Simplex"/>
                                                    <ComboBoxItem Content="Punto Interior"/>
                                                </ComboBox>
                                            </Grid>
                                        </GroupBox>

                                        <GroupBox Header="Exportación" Margin="0,0,0,10">
                                            <StackPanel Margin="10">
